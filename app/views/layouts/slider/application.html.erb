<!DOCTYPE html>
<html>
  <head>
    <title>Slider</title>
    <%= stylesheet_link_tag "slider/application", media: "all" %>
    <%= csrf_meta_tags %>
  </head>
  <nav class="head nav-head">
    <div class="container"></div>
  </nav>
  <body>
    <div class="container">
      <% if flash[:success]  %>
        <div class="alert alert-success">
          <%= flash[:success] %>
        </div>
      <%end%>
      <% if flash[:danger]  %>
        <div class="alert alert-danger">
          <%= flash[:danger] %>
        </div>
      <%end%>
      <%= yield %>
    </div>
  </body>
  <%= javascript_include_tag "slider/application" %>
</html>
