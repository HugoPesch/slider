<%
  slides = {"1": 1, "2": 2, "3": 3, "4": 1, "5": 3}
  nbSlides = slides.length;
%>
  <div id="carrousel1">
    <% slides.each do |slide, img| %>
      <div id="slide<%=slide.to_s.to_i%>" class="slide">
        <div class="numSlide">
          <span><%=slide.to_s.to_i%>/<%= nbSlides %></span>
        </div>
        <div class="visuel">
          <img src="../images/<%= img %>.jpg"/>
        </div>
        <div class="title">
          Image
          <%=slide.to_s.to_i%>
        </div>
      </div>
    <% end %>
  </div>
</div>
