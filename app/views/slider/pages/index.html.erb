<%
  slides = {"1": 1, "2": 2, "3": 3, "4": 1, "5": 3}
  nbSlides = slides.length;

  slides1 = {"1": "r1", "2": "r2", "3": "r3"}
  nbSlides1 = slides1.length
%>
<h2>Exemple de slider horizontal</h2>
  <div id="carrouselHor">
    <% slides.each do |slide, img| %>
      <div id="slide<%= slide.to_s.to_i %>" class="slide">
        <div class="numSlide">
          <span><%= slide %>/<%= nbSlides %></span>
        </div>
        <div class="visuel">
          <img src="../images/<%= img %>.jpg"/>
        </div>
        <div class="title">
          Image
          <%= slide %>
        </div>
      </div>
    <% end %>
  </div>
  <br/><br/><br/>
  <h2>Exemple de slider horizontal</h2>
  <div id="carrouselVer">
    <% slides1.each do |slide, img| %>
      <div id="slide<%= slide %>" class="slide">
        <div class="numSlide">
          <span><%= slide %>/<%= nbSlides1 %></span>
        </div>
        <div class="visuel">
          <img src="../images/<%= img.to_s %>.jpg"/>
        </div>
        <div class="title">
          Image
          <%= slide %>
        </div>
      </div>
    <% end %>
  </div>
