<%
  @slides = Hash.new
  @nbSlides = @slider.gallery.uploads.length

  (1..@slider.gallery.uploads.length).each do |i|
      @slider.gallery.uploads.each do |image|
        @slides.merge!({:"#{i}" => image.image(:orginal)})
      end
   end

%>
<% @slider.gallery.uploads.each do |image| %>
  <%= image_tag image.image(:thumb)%>
  <%= image.image(:thumb) %>
<% end %>
<%= @slides %>
<h1>Show Page</h1>
<div id="carrouselHor">
  <% @slides.each do |slide, img| %>
    <div id="slide<%= slide.to_s.to_i %>" class="slide">
      <div class="numSlide">
        <span><%= slide %>/<%= @nbSlides %></span>
      </div>
      <div class="visuel">
        <%= image_tag img %>
      </div>
      <div class="title">
        Image
        <%= slide %>
      </div>
    </div>
  <% end %>
</div>
