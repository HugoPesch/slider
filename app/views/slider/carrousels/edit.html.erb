<h1>Edit Page</h1>
<%= form_for @slider do |f| %>
  <%= f.label "Nom du slider" %><br/>
  <%= f.text_field :carrouselName %><br/>
  <%= f.label "Type de slider" %><br/>
  <div>
    <%= f.radio_button :type_slide, "vertical", :checked => (@slider.type_slide == "vertical") %><span>vertical</span><br/>
    <%= f.radio_button :type_slide, "horizontal", :checked => (@slider.type_slide != "vertical") %><span>horizontal</span><br/>
  </div>
  <div>
  <% if defined?(@slider.gallery.id) %>
    <%= f.collection_select :gallery, @galleries.reject{|car| !car.carrousel_id.nil? && car.carrousel_id != @slider.gallery.carrousel_id }, :id, :galleryName, include_blank: 'None', :selected => @slider.gallery.id %><br/>
  <% else %>
    <%= f.collection_select :gallery, @galleries.reject{|car| !car.carrousel_id.nil? }, :id, :galleryName, include_blank: 'None' %><br/>
  <% end %>
  </div>
    <div id="images">
    </div>
  <a href="<%= carrousels_path %>">Cancel</a>
  <%= f.submit %>
<% end %>
