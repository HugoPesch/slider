<div class="form-style-8">
  <h2>Edit Carrousel</h2>
  <%= form_for @slider do |f| %>
    <%= f.label "Carrousel Name" %>
    <%= f.text_field :carrouselName %><br/>
    <%= f.label "Carrousel Type" %><br/>
    <div>
      <%= f.radio_button :type_slide, "vertical", :checked => (@slider.type_slide == "vertical") %><span>vertical</span><br/>
      <%= f.radio_button :type_slide, "horizontal", :checked => (@slider.type_slide != "vertical") %><span>horizontal</span><br/>
    </div><br/>    
    <p class="in-form-button"><%= f.submit %><p/>
  <% end %>
</div>
