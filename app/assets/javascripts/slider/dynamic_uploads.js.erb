  /*Lors de du changement de la select liste*/

  $('#carrousel_gallery').on('change', function(){
    id = $('#carrousel_gallery').val();
    console.log(id);
    if (id != "" ){
      $.ajax({
        /* appel ajax avec la methode GET, url: galleries + id gallery */
        type: 'GET',
        url: "/galleries/" + id,
        beforeSend: function() {

        },
        success:function(data){
              console.log(data);
              /* Rendu dans la div id images*/
              $('#images').html(data);
         }
      })
    }
      $('#images').empty();
  });
});
